<toolSet name="Php CS Fixer">
  <tool name="格式化文件夹" description="格式化整个文件夹" showInMainMenu="false" showInEditor="false" showInProject="false" showInSearchPopup="false" disabled="false" useConsole="true" showConsoleOnStdOut="false" showConsoleOnStdErr="false" synchronizeAfterRun="true">
    <exec>
      <option name="COMMAND" value="php-cs-fixer.bat" />
      <option name="PARAMETERS" value="fix --rules=@Symfony,@PSR2,-yoda_style,-increment_style ./" />
      <option name="WORKING_DIRECTORY" value="$FileDir$" />
    </exec>
  </tool>
  <tool name="格式化文件" description="格式化文件" showInMainMenu="false" showInEditor="false" showInProject="false" showInSearchPopup="false" disabled="false" useConsole="true" showConsoleOnStdOut="false" showConsoleOnStdErr="false" synchronizeAfterRun="true">
    <exec>
      <option name="COMMAND" value="php-cs-fixer.bat" />
      <option name="PARAMETERS" value="fix --rules=@Symfony,@PSR2,-yoda_style,-increment_style ./$FileName$" />
      <option name="WORKING_DIRECTORY" value="$FileDir$" />
    </exec>
  </tool>
</toolSet>